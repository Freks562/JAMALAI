// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")   // use pooled URL for runtime
  directUrl = env("DIRECT_URL")    // use direct URL for migrations
}

enum Branch {
  ARMY
  NAVY
  AIR_FORCE
  MARINES
  COAST_GUARD
  SPACE_FORCE
}

model Veteran {
  id        String   @id @default(cuid())
  name      String
  rank      String
  branch    Branch
  startYear Int?
  endYear   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}